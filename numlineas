from PyQt5.QtWidgets import QApplication, QLabel, QWidget, QVBoxLayout, QComboBox, QTextEdit, QTabWidget, QHBoxLayout, QPushButton, QFileDialog, QPlainTextEdit
from PyQt5.QtCore import Qt

# Create a custom slot function to handle the selection change
def handle_selection_change(index):
    selected_item = combo_box.currentText()
    if selected_item == 'Option 1':
        open_file()
    elif selected_item == 'Option 2':
        save_file()
    else:
        print("Selected item:", selected_item)

# Function to open a file
def open_file():
    file_path, _ = QFileDialog.getOpenFileName(window, 'Open File', '', 'All Files (*)')
    if file_path:
        with open(file_path, 'r') as file:
            text = file.read()
            text_box.setPlainText(text)

def save_file():
    file_path, _ = QFileDialog.getSaveFileName(window, 'Save File', '', 'All Files (*)')
    if file_path:
        text = text_box.toPlainText()
        with open(file_path, 'w') as file:
            file.write(text)

# Create a QApplication instance
app = QApplication([])

# Create a QWidget instance (main window)
window = QWidget()
window.setGeometry(100, 100, 600, 400)  # Set window size and position

# Create a QVBoxLayout to arrange widgets vertically
layout = QVBoxLayout(window)

# Create a QHBoxLayout to arrange widgets horizontally
top_layout = QHBoxLayout()
bottom_layout = QHBoxLayout()

# Create two instances of QTabWidget
tab_widget_1 = QTabWidget()
tab_widget_2 = QTabWidget()

# Create five tabs for each QTabWidget
for i in range(5):
    tab_widget_1.addTab(QWidget(), f'Tab {i+1}')
    tab_widget_2.addTab(QWidget(), f'Tab {i+1}')

# Create a QComboBox widget (dropdown menu)
combo_box = QComboBox(window)
combo_box.addItem('Option 1')
combo_box.addItem('Option 2')
combo_box.addItem('Option 3')

# Connect the currentIndexChanged signal to the handle_selection_change function
combo_box.currentIndexChanged.connect(handle_selection_change)

# Create a QPushButton to open a file
open_button = QPushButton('Open File', window)
open_button.clicked.connect(open_file)

# Add the combo box and the open button to the top layout
top_layout.addWidget(combo_box)
top_layout.addWidget(open_button)

# Add the top layout to the main layout
layout.addLayout(top_layout)

# Create a QLabel widget to contain line numbers
line_numbers = QLabel(parent=window)
line_numbers.setAlignment(Qt.AlignRight | Qt.AlignTop)
line_numbers.setFixedSize(40, 200)  # Adjust the size as needed

# Create a QPlainTextEdit widget (text box)
text_box = QPlainTextEdit(window)
text_box.setPlaceholderText("Enter text here...")

# Update line numbers when the text changes
def update_line_numbers():
    contents = text_box.toPlainText()
    line_count = contents.count('\n') + 1
    line_numbers.setText('\n'.join(str(i) for i in range(1, line_count + 1)))

text_box.textChanged.connect(update_line_numbers)

# Add the widgets to the bottom layout
bottom_layout.addWidget(line_numbers)
bottom_layout.addWidget(text_box)

# Add the bottom layout to the main layout
layout.addLayout(bottom_layout)

# Add the tab widgets to the main layout
layout.addWidget(tab_widget_1)
layout.addWidget(tab_widget_2)

# Show the main window
window.show()

# Start the application's event loop
app.exec_()
